  "version": "1.0.0",
  "description": "Convert videos, images, audio, and documents.",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": {
    "name": "Mario Fares",
    "email": "mariofares02@gmail.com"
